<!doctype html>
<html>
<head>
	<meta charset="UTF-8">
	<title>My app</title>
</head>
<style>
	body{
		background-color: #303030;
	}
	#container{
		width:30%;
		display: block;
		margin: 150px auto;
		padding: 30px;
		color:white;
		box-shadow: 0px 0px 20px #101010;
	}
	#container input{
		width:100%;
		margin-top: 10px;
		box-sizing: border-box;
		border:0;
		padding: 5px;
	}
	#container h1{
		font-family: arial;
		text-transform: uppercase;
	}
	#submit{
		cursor: pointer;
		background-color: #fa4521;
		color:white;
	}
</style>
<body>
	<div id="container">
		<h1><%= title %></h1>
		<form id="form" action="#">
			<input id="name" type="text" placeholder="Name">
			<input id="submit" type="submit" value="Play">
		</form>
	</div>
	<script>
		if(sessionStorage.name === undefined){
			var submit = document.getElementById('submit');
			var input = document.getElementById('name');
			submit.onclick = function(){
				if(input.value === ''){
					alert('please, name yourself');
				}
				else{
					sessionStorage.name = input.value;
					location.replace("/game");
				}
			}
		} else {
			location.replace("/game");
		}
	</script>
</body>
</html>